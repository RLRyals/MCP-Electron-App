# Environment configuration for MCP-Electron-App
# Copy this file to .env and update the values below

# MCP Writing Servers Repository
# The Electron app automatically clones this to userData/repositories/
# Linux: ~/.config/mcp-electron-app/repositories/mcp-writing-servers
# macOS: ~/Library/Application Support/mcp-electron-app/repositories/mcp-writing-servers
# Windows: %APPDATA%\mcp-electron-app\repositories\mcp-writing-servers
MCP_WRITING_SERVERS_DIR=~/.config/mcp-electron-app/repositories/mcp-writing-servers

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=writing_db

# TypingMind Configuration (optional - only if you use TypingMind)
TYPING_MIND_DIR=/home/user/MCP-Electron-App/typingmind
NGINX_CONF_PATH=/home/user/MCP-Electron-App/nginx.conf

# MCP Connector
MCP_AUTH_TOKEN=production-token-change-me

# Node Environment
NODE_ENV=production

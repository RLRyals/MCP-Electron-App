{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "./dist",
    "jsx": "react"
  },
  "include": [
    "src/renderer/**/*"
  ],
  "exclude": [
    "src/types/**/*",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/setupTests.ts"
  ]
}

{
  "version": "1.0.0",
  "title": "MCP Electron App - Build Configuration",
  "description": "Configuration for automated setup and build of the MCP Electron application and its dependencies",
  "baseClonePath": "./repositories",
  "repositories": [
    {
      "id": "mcp-writing-servers",
      "name": "MCP Writing Servers",
      "url": "https://github.com/RLRyals/MCP-Writing-Servers.git",
      "clonePath": "mcp-writing-servers",
      "branch": "main",
      "optional": false,
      "description": "MCP servers for writing and text processing"
    },
    {
      "id": "typingmind-mcp",
      "name": "Typing Mind MCP Connector",
      "url": "https://github.com/typingMind/typingmind-mcp.git",
      "clonePath": "typingmind-mcp",
      "branch": "main",
      "optional": false,
      "description": "MCP connector for Typing Mind integration"
    },
    {
      "id": "typing-mind",
      "name": "Typing Mind UI",
      "url": "https://github.com/typingMind/typingmind.git",
      "clonePath": "typingmind",
      "branch": "main",
      "optional": true,
      "description": "Typing Mind web-based UI component"
    }
  ],
  "buildOrder": {
    "order": [
      "mcp-writing-servers",
      "typingmind-mcp",
      "typing-mind"
    ],
    "dependencies": {
      "mcp-writing-servers": [],
      "typingmind-mcp": ["mcp-writing-servers"],
      "typing-mind": []
    },
    "allowParallel": false
  },
  "buildSteps": [
    {
      "id": "mcp-writing-servers-install",
      "name": "MCP Writing Servers - Install Dependencies",
      "repositoryId": "mcp-writing-servers",
      "command": "npm install",
      "workingDir": ".",
      "continueOnError": false,
      "timeout": 600
    },
    {
      "id": "typingmind-mcp-install",
      "name": "Typing Mind MCP - Install Dependencies",
      "repositoryId": "typingmind-mcp",
      "command": "npm install",
      "workingDir": ".",
      "continueOnError": false,
      "timeout": 600
    },
    {
      "id": "typing-mind-install",
      "name": "Typing Mind UI - Install Dependencies",
      "repositoryId": "typing-mind",
      "command": "npm install",
      "workingDir": ".",
      "continueOnError": true,
      "timeout": 600
    }
  ],
  "dockerImages": {
    "mcp-writing-servers": {
      "repository": "mcp-servers",
      "tag": "latest",
      "buildContextPath": ".",
      "dockerfilePath": "Dockerfile"
    }
  },
  "components": [
    {
      "id": "core-system",
      "name": "Core System",
      "description": "Core MCP system including Writing Servers and MCP Connector",
      "enabled": true,
      "repositoryIds": [
        "mcp-writing-servers",
        "typingmind-mcp"
      ]
    },
    {
      "id": "typing-mind-component",
      "name": "Typing Mind Integration",
      "description": "Optional Typing Mind UI component",
      "enabled": false,
      "repositoryIds": [
        "typing-mind"
      ]
    }
  ],
  "globalEnv": {
    "NODE_ENV": "production",
    "LOG_LEVEL": "info"
  },
  "metadata": {
    "createdAt": "2025-11-08T21:00:00Z",
    "updatedAt": "2025-11-08T21:00:00Z",
    "author": "MCP Development Team"
  }
}
